Question = input("Put in a value from 1 to 5:")

def print_triangular_numbers():
    if print_triangular_numbers() == "1":
        print("1")

    if print_triangular_numbers() == "2":
        print("1,3")

    if print_triangular_numbers() == "3":
        print("1,3,6")

    if print_triangular_numbers() == "4":
        print("1,3,6,10")

    if print_triangular_numbers() == "5":
        print("1,3,6,10,15")
