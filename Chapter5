def weekday():
    weekday = ("Sunday", " Monday" , "Tuesday" , "Wednesday" , "Thursday", "Friday" , "Saturday")
    print(list(enumerate(weekday,0)))
    weeknum = int(input("weekday number:",))
    weekday_name = weekday(weeknum)
    return (weekday_name)

weekday_name = weekday()
print(weekday)

